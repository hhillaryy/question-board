{{#if addNewQuestion}}
<h1>New Question</h1>
<div>
  <form>
    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="post">Question</label>
      {{input value=post id="post"}}
    </div>

    <button {{action 'save'}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'questionFormShow'}}>Ask A New Question</button>
{{/if}}

